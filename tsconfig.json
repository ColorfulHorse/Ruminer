{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "outDir": "./build",
    "allowJs": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "watch": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
//    "keyofStringsOnly": true,
    "typeRoots": [
      "types",
      "./src/types/*"
    ],
    "paths": {
      "@/*": [
        "src/*"
      ],
      "root/*": [
        "./*"
      ]
    },
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts",
    "tests/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}